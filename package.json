{
    "name": "apply-config",
    "version": "1.3.0",
    "description": "A collection of helper scripts to apply various configs to a project",
    "main": "dist/index.js",
    "bin": {
        "apply-config": "dist/index.js"
    },
    "scripts": {
        "clean": "rimraf dist",
        "prebuild": "npm run clean",
        "build": "tsc",
        "build:watch": "tsc --watch",
        "lint": "eslint . --ext .ts,.d.ts,.js",
        "lint:fix": "eslint . --ext .ts,.d.ts,.js --fix",
        "prepublishOnly": "npm run lint && npm run build",
        "test": "jest --ci",
        "test:watch": "jest --watch"
    },
    "keywords": [
        "eslint",
        "typescript",
        "setup",
        "prettier",
        "config",
        "github",
        "travis"
    ],
    "author": "Giles Roadnight",
    "license": "ISC",
    "devDependencies": {
        "@types/jest": "^26.0.22",
        "@types/node": "^14.14.25",
        "@types/promptly": "^3.0.1",
        "@typescript-eslint/eslint-plugin": "^4.20.0",
        "@typescript-eslint/parser": "^4.20.0",
        "eslint": "^7.19.0",
        "eslint-config-prettier": "^7.2.0",
        "eslint-config-standard": "^16.0.2",
        "eslint-plugin-import": "^2.22.1",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-prettier": "^3.3.1",
        "eslint-plugin-promise": "^4.2.1",
        "eslint-plugin-simple-import-sort": "^7.0.0",
        "jest": "^26.6.3",
        "prettier": "^2.2.1",
        "rimraf": "^3.0.2",
        "ts-jest": "^26.5.4",
        "typescript": "^4.1.3"
    },
    "dependencies": {
        "chalk": "^4.1.0",
        "detect-json-indent": "0.0.3",
        "make-dir": "^3.1.0",
        "promptly": "^3.2.0"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Roaders/setup-typescript-eslint.git"
    },
    "bugs": {
        "url": "https://github.com/Roaders/setup-typescript-eslint/issues"
    },
    "homepage": "https://github.com/Roaders/setup-typescript-eslint#readme"
}
